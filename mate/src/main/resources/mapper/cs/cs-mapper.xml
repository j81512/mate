<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cs">
  
 <select id="selectCsList" resultType="cs">
		select
			*
		from 
			cs
		order by
			no desc
	</select>
	
	<insert id="insertCs">
		insert into
			cs
		values (
			seq_cs_no.nextval,
			#{ title },
			#{ content },
			#{ regDate },
			#{ memberId },
			default		
		)
	</insert>

	<delete id="deleteCs">
        delete from 
        	cs 
     	where 
     		cs_no = #{csno} 
     	 
    </delete>

</mapper>